<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.stock.sku" display="false"></referenceContainer>
        <referenceBlock name="product.info.review" remove="true"></referenceBlock>
        <!-- <referenceBlock name="product.info.details" display="false"></referenceBlock> -->

        <referenceContainer name="content">
            <container name="section.detail.product" htmlTag="div" htmlClass="detail-description-product" after="product.info.media">
                <block class="Magento\Catalog\Block\Product\View\Attributes" name="product.info.detail.custom" as="detail_custom" template="Magento_Catalog::product/view/attributes_custom.phtml" before="-" />        
            </container>
        </referenceContainer>
    </body>
</page>
