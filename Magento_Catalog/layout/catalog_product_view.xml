<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    <referenceBlock name="product.attributes" remove="true"/>
        <referenceContainer name="content" > 
            <referenceContainer name="product.info.stock.sku" remove="true"/>
            <referenceBlock name="product.info.details">
                <referenceBlock name="product.info.description" as="description" template="Magento_Catalog::product/view/attribute.phtml" group="detailed_info">
                    <arguments>
                        <argument name="title" translate="true" xsi:type="string">Description</argument>
                    </arguments>
                </referenceBlock>
                <block class="Magento\Framework\View\Element\Template" name="detail_tab.return" template="Magento_Catalog::detail_tab.phtml" group="detailed_info"> 
                    <arguments>
                        <argument translate="true" name="title" xsi:type="string">Care &#38; Warranty</argument>
                        <argument name="sort_order" xsi:type="string">20</argument>
                    </arguments>
                </block>

                <block class="Magento\Framework\View\Element\Template" name="detail_tab2:return" template="Magento_Catalog::detail_tab_block2.phtml" group="detailed_info"> 
                    <arguments>
                        <argument translate="true" name="title" xsi:type="string">Shipping &#38; Delivery</argument>
                        <argument name="sort_order" xsi:type="string">30</argument>
                    </arguments>
                </block>
                <block class="Magento\Catalog\Block\Product\View\Attributes" name="product.attr" as="addition" template="Magento_Catalog::detail_tab_attr.phtml" group="detailed_info">
                    <arguments>
                        <argument translate="true" name="title" xsi:type="string">Installation Requirements</argument>
                        <argument name="sort_order" xsi:type="string">40</argument>
                    </arguments>
                </block>
                
            </referenceBlock>
        </referenceContainer>
        <referenceBlock name="test" remove="true" />
        <referenceContainer name="product.info.stock.sku" remove="true"/>
        <referenceBlock name="product.info.review" remove="true" />
        <referenceContainer name="product.info.social" remove="true"/>
        <move element="page.main.title" destination="product.info.main" before="-"/>

        <!-- <referenceContainer name="content">
            <container name="section.detail.product" htmlTag="div" htmlClass="detail-description-product" after="product.info.media">
                <block class="Magento\Catalog\Block\Product\View\Attributes" name="product.info.detail.custom" as="detail_custom" template="Magento_Catalog::product/view/attributes_custom.phtml" before="-" />        
            </container>
        </referenceContainer> -->
    </body>
</page>
